<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Due date</th>
      <th>Task</th>
      <th>Status</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.due_date %></td>
        <td><%= task.task %></td>
        <td><%= task.status %></td>
        <td><%= task.link %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
